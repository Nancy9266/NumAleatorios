<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.joseandres.numaleatorios.MainActivity"
    android:background="#d9a3f4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Puntuacion Acertada :D"
        android:id="@+id/txv1"
        android:textSize="25dp"
        android:textColor="#fa13d0"
        android:layout_below="@+id/btn"
        android:layout_alignStart="@+id/txv3"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv2"
        android:layout_alignBottom="@+id/edt"
        android:textSize="25dp"
        android:textColor="#090000"
        android:text="0"
        android:layout_below="@+id/txv1"
        android:layout_alignStart="@+id/edt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edt"
        android:textColor="#0a0909"
        android:textSize="25dp"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/txv1"
        android:layout_alignEnd="@+id/txv3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPROBAR"
        android:id="@+id/btn"
        android:onClick="verificar"
        android:layout_marginTop="84dp"
        android:layout_below="@+id/txv3"
        android:layout_centerHorizontal="true"
        android:background="#bb7af4"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Adivina un nÃºmero entre 1 y 50"
        android:id="@+id/txv3"
        android:textSize="20dp"
        android:textColor="#080707"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
